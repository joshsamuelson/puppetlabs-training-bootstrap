{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-west-2",
      "source_ami": "ami-1d48b17d",
      "instance_type": "m3.large",
      "ssh_username": "training",
      "ssh_keypair_name": "training",
      "ssh_private_key_file": "{{ user `ssh_key` }}",
      "ami_name": "Puppet-4-Parser-PE-{{user `pe_version`}}-{{ user `vm_type`}}-{{ user `ptb_version`}}-{{isotime \"Jan02-0304\" }}",
      "ssh_pty": "true"
    }
  ],
  "provisioners": [
    {
      "type":"file",
      "source": "courseware-virtual/puppet_4_parser",
      "destination":"/tmp/"
    },
    {
      "type":"shell",
      "inline": ["mkdir /tmp/puppet_4_parser/_support"]
    },
    {
      "type":"file",
      "source": "courseware-virtual/_support/watermark.css",
      "destination": "/tmp/puppet_4_parser/_support/watermark.css"
    },
    {
      "type":"file",
      "source": "courseware-virtual/_support/watermark.pdf",
      "destination": "/tmp/puppet_4_parser/_support/watermark.pdf"
    },
    {
      "type":"file",
      "source": "courseware-virtual/_support/watermark.png",
      "destination": "/tmp/puppet_4_parser/_support/watermark.png"
    },
    { 
      "type":"shell",
      "inline": ["mv /tmp/puppet_4_parser /home/training/courseware"]
    },
    {
      "environment_vars": [
        "PE_STATUS={{user `pe_status`}}",
        "PE_VERSION={{user `pe_version`}}",
        "RUBY_LIB={{user `rubylib`}}",
        "TRAINING_REPO={{user `training_repo`}}",
        "TRAINING_BRANCH={{user `training_branch`}}",
        "VM_TYPE={{user `vm_type`}}"
      ],
      "execute_command": "echo 'training' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/courses/aws_parser.sh"
      ],
      "type": "shell"
    },
    {
      "execute_command": "echo 'training' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/clean_nodegroup.sh"
      ],
      "type": "shell"
    },
    {
      "type":"shell",
      "execute_command": "echo 'training' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "inline": [
          "chmod +x /home/training/courseware/_files/test.sh",
          "/home/training/courseware/_files/test.sh"
      ]
    }
  ],
  "variables": {
    "ssh_key": "{{ env `HOME`}}/.ssh/training.pem",
    "hostname": "vagrant",
    "arch": "",
    "guest_os_type": "centos",
    "ks_file": "",
    "iso_checksum": "",
    "iso_url": "",
    "os_name": "",
    "pe_status": "release",
    "pe_version": "2016.1.2",
    "rubylib": "/usr/src/puppet/lib:/usr/src/facter/lib:/usr/src/hiera/lib",
    "system_user": "vagrant",
    "system_user_password": "vagrant",
    "training_branch": "master",
    "training_repo": "https://github.com/puppetlabs/education-builds.git",
    "vm_type": "",
    "vm_memsize": "",
    "vm_disk_size": "",
    "vm_cores": "",
    "ptb_version": "5.1"
  }
}
